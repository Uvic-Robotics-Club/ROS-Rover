<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="UVicArm">
  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>
  <material name="orange">
    <color rgba="1 0.7 0 1"/>
  </material>
  <material name="green">
    <color rgba="0 0.8 0 1"/>
  </material>
  <material name="rcolor">
    <color rgba="0.5 0.8 0.5 1"/>
  </material>
  <material name="rcolor2">
    <color rgba="0.7 0.3 0.2 1"/>
  </material>

  <xacro:property name="filepath" value="package://uvic_rover/rover_description/Arm/" />

  <xacro:macro name="default_inertial" params="mass">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${mass}" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </xacro:macro>

  <xacro:property name="base_link_rpy" value="1.57075 0 0" />
  <xacro:property name="base_link_xyz" value="-115 115 0" />

  <xacro:property name="base_component_rpy" value="0 0 0" />
  <xacro:property name="base_component_xyz" value="-70.5 0 -70.5" />

  <xacro:property name="shoulder_rpy" value="-1.57075 0 1.57075" />
  <xacro:property name="shoulder_xyz" value="15.5 -55 55" />

  <xacro:property name="elbow_link_rpy" value="0 0 0" />
  <xacro:property name="elbow_link_xyz" value="-95.5 -162 -71" />

  <xacro:property name="wrist_link_rpy" value="0 0 0" />
  <xacro:property name="wrist_link_xyz" value="-59.1 -66.8 -89.5" />

  <xacro:property name="gripper_rpy" value="0 3.14 0" />
  <xacro:property name="gripper_xyz" value="6 -34.8 80" />


  <link name="base_link">
    <visual>
      <geometry>
        <mesh filename="${filepath}BaseMotor.STL"/>
      </geometry>
      <origin rpy="${base_link_rpy}" xyz="${base_link_xyz}"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${filepath}BaseMotor.STL"/>
      </geometry>
      <origin rpy="${base_link_rpy}" xyz="${base_link_xyz}"/>
    </collision>
  </link>

  <link name="base_component">
    <visual>
      <geometry>
        <mesh filename="${filepath}BaseComponent.STL"/>
      </geometry>
      <material name="blue"/>
      <origin rpy="${base_component_rpy}" xyz="${base_component_xyz}"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${filepath}BaseComponent.STL"/>
      </geometry>
      <origin rpy="${base_component_rpy}" xyz="${base_component_xyz}"/>
    </collision>
    <xacro:default_inertial mass="1.8"/>
  </link>

  <link name="shoulder">
    <visual>
      <geometry>
        <mesh filename="${filepath}Shoulder.STL"/>
      </geometry>
      <origin rpy="${shoulder_rpy}" xyz="${shoulder_xyz}"/>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${filepath}Shoulder.STL"/>
      </geometry>
      <origin rpy="${shoulder_rpy}" xyz="${shoulder_xyz}"/>
    </collision>
    <xacro:default_inertial mass="1.1"/>
  </link>

  <link name="elbow_link">
    <visual>
      <geometry>
        <mesh filename="${filepath}ElbowLink2.STL"/>
      </geometry>
      <material name="green"/>
      <origin rpy="${elbow_link_rpy}" xyz="${elbow_link_xyz}"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${filepath}ElbowLink2.STL"/>
      </geometry>
      <origin rpy="${elbow_link_rpy}" xyz="${elbow_link_xyz}"/>
    </collision>
    <xacro:default_inertial mass="1.1"/>
  </link>

  <link name="wrist_link">
    <visual>
      <geometry>
        <mesh filename="${filepath}Wrist.STL"/>
      </geometry>
      <material name="rcolor"/>
      <origin rpy="${wrist_link_rpy}" xyz="${wrist_link_xyz}"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${filepath}Wrist.STL"/>
      </geometry>
      <origin rpy="${wrist_link_rpy}" xyz="${wrist_link_xyz}"/>
    </collision>
    <xacro:default_inertial mass="0.382"/>
  </link>

  <link name="gripper">
    <visual>
      <geometry>
        <mesh filename="${filepath}Gripper.STL"/>
      </geometry>
      <origin rpy="${gripper_rpy}" xyz="${gripper_xyz}"/>
      <material name="rcolor2"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="${filepath}Gripper.STL"/>
      </geometry>
      <origin rpy="${gripper_rpy}" xyz="${gripper_xyz}"/>
    </collision>
    <xacro:default_inertial mass="0.250"/>
  </link>

  <joint name="base_motor_to_base" type="continuous">
    <parent link="base_link"/>
    <child link="base_component"/>
    <origin rpy="1.57075  0 0" xyz="0 0 210"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="base_to_shoulder" type="continuous">
    <parent link="base_component"/>
    <child link="shoulder"/>
    <origin rpy="0 0 0" xyz="-40 70 0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <joint name="shoulder_to_elbow" type="continuous">
    <parent link="shoulder"/>
    <child link="elbow_link"/>
    <origin rpy="0 0 0" xyz="0 320 0"/>
    <axis xyz="1 0 0"/>
  </joint>

  <joint name="elbow_to_wrist" type="continuous">
    <parent link="elbow_link"/>
    <child link="wrist_link"/>
    <origin rpy="-3.14 1.57075 0" xyz=" 0 -1.5 291.5"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="wrist_to_gripper" type="continuous">
    <parent link="wrist_link"/>
    <child link="gripper"/>
    <origin rpy="0 0 0" xyz="-60 0 44 "/>
    <axis xyz="1 0 0"/>
  </joint>

  <!-- Gazebo plugin for ROS Control -->
  <gazebo>
    <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
      <robotNamespace>/</robotNamespace>
    </plugin>
  </gazebo>

</robot>